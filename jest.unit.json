{
  "testTimeout": 1000000,
  "preset": "ts-jest",
  "coverageDirectory": "./coverage",
  "testMatch": [
    "**/?(*.)+(routes.test).ts",
    "**/?(*.)+(controller.test).ts",
    "**/?(*.)+(integration.test).ts"
  ],
  "resetMocks": true,
  "clearMocks": true,
  "setupFiles": [
    "<rootDir>/scripts/test-setup.ts"
  ]
}